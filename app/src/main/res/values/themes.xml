<resources>
    <!-- Base application theme. -->
    <style name="Theme.FxConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDisablePreview">true</item>


        <!-- Customize your theme here. -->

        <item name="circularProgressIndicatorStyle">@style/Widget.App.LinearProgressIndicator</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.FxConverter</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
    </style>


    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Theme.FxConverter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FxConverter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="elevation">8dp</item>
    </style>


    <style name="BottomSheetCloseIndicator">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">3dip</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/background_rule</item>
    </style>


    <style name="BottomSheetTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
    </style>




    <style name="SettingsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>


    <style name="SettingsLayout2Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="SettingsTextLabelStyle" parent="SettingsTextStyle">

    </style>

    <style name="SettingsTextValueStyle" parent="SettingsTextStyle">

    </style>

    <style name="SocialsIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.LinearProgressIndicator</item>
        <item name="trackThickness">8dp</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <style name="ThemeOverlay.App.LinearProgressIndicator" parent="">
        <item name="colorPrimary">@color/yellow_300</item>
    </style>

</resources>